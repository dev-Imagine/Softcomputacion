@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_UsuarioLogueado.cshtml";
    List<softcomputacion.Models.ReporteESstock> lstReporte = new List<softcomputacion.Models.ReporteESstock>();
    string[] arrFiltros = Convert.ToString(ViewBag.filtros).Split(';');
    if (arrFiltros[2] != "") { arrFiltros[2] = null; }
}
@model List<softcomputacion.Models.ReporteESstock>
<div class="container-fluid">
    <div class="row">
        @Html.Partial("_IndiceReporte")
        <div class="col-12 col-md-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-8" style="">
            <div class="row">
                <div class="col-12">
                    <br />
                    <h1 class="text-center"> ENTRADA Y SALIDA DE PRODUCTOS </h1>
                    <br />
                </div>
            </div>
            @* Form de busqueda *@
            <form method="post" action="@Url.Action("ReporteStockES", "Reporte")" autocomplete="off">
                <div class="row">
                    <div class="col-6 col-md-3 col-lg-3">
                        <div class="wrap-input100 m-b-20">
                            <input class="input100" type="number" name="idProducto" id="idProducto" placeholder="Codigo" value="@arrFiltros[2]">
                        </div>
                    </div>
                    <div class="col-6 col-md-3 col-lg-3">
                        <div class="wrap-input100 m-b-20">
                            <input class="input100" type="text" name="fechaDesde" id="dpfechaDesde" placeholder="Desde" value="@arrFiltros[0]" onfocus="(this.type='month')">
                        </div>
                    </div>
                    <div class="col-6 col-md-3 col-lg-3">
                        <div class="wrap-input100 m-b-20">
                            <input class="input100" type="text" name="fechaHasta" id="dpfechaHasta" placeholder="Hasta" value="@arrFiltros[1]" onfocus="(this.type='month')">
                        </div>
                    </div>

                    <div class="col-6 col-md-3 col-lg-3">
                        <div class="container-login100-form-btn m-b-20">
                            <button class="login100-form-btn fs-22" style="height:56px;" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-12">
                        <br />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-12 col-xl-10 offset-xl-1">
            @if (Model != null)
            {
                foreach (var oReporteES in Model)
                {
                    <div class="row">
                        <div class="col-12 col-md-3 col-lg-2  text-center">
                            <i> @oReporteES.mes.ToString().PadLeft(2, '0') / @oReporteES.año </i>
                        </div>
                        <div class="col-12 col-md-9 col-lg-4 ">
                            <strong>@oReporteES.productoNombre</strong>
                        </div>
                        <div class="col-12 col-sm-4 col-md-4 col-lg-2 text-center p-r-5 p-l-5">
                            <i>Codigo: <strong> @oReporteES.idProducto</strong></i>
                        </div>
                        <div class="col-12 col-sm-4 col-md-4 col-lg-2 text-center p-r-5 p-l-5">
                            <i class="text-success">Entrada: <strong> @oReporteES.entrada</strong></i>
                        </div>
                        <div class="col-12 col-sm-4 col-md-4 col-lg-2 text-center p-r-5 p-l-5">
                            <i class="text-danger">Salida: <strong> @oReporteES.salida</strong></i>
                        </div>
                        <div class="col-12">
                            <hr class="m-t-8 m-b-8" />
                        </div>
                    </div>


                }
            }

        </div>
    </div>
</div>




<script>

</script>


